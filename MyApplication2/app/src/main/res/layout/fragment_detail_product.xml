<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.detail_product.DetailProductFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textViewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/buttonClickMe"
        android:text="Click Me"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/buttonClickMeShow"
        android:text="Click Me Show"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <fragment
            android:id="@+id/fragmentPub"
            class="com.example.myapplication.ui.home.PubFragment"
            tools:layout="@layout/fragment_pub"
            android:layout_marginTop="200dp"
            android:layout_width="200dp"
            android:layout_height="200dp">
        </fragment>
        <fragment
            android:id="@+id/fragmentSub"
            class="com.example.myapplication.ui.home.SubFragment"
            tools:layout="@layout/fragment_sub"
            android:layout_marginTop="200dp"
            android:layout_width="200dp"
            android:layout_height="200dp">

        </fragment>
    </LinearLayout>
    <Switch

        android:layout_width="200dp"
        android:layout_height="40dp"/>

</FrameLayout>